---
import BaseLayout from "@layouts/BaseLayout.astro"
---

<BaseLayout />

<script>
    import p5 from "p5"
    import { sketch } from "@scripts/ciatta/nebula"
    import { sketchElement } from "@utils/globals"

    const params = new URLSearchParams(window.location.search)
    const scale = params.get("scale") || "10"
    const hue = params.get("hue") || "330"

    new p5(
        p =>
            sketch(p, {
                scale: Number.parseFloat(scale),
                hue: Number.parseFloat(hue),
            }),
        sketchElement
    )
</script>
